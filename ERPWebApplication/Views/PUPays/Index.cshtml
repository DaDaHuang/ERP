@model IEnumerable<ERPWebApplication.Dao.PUPay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>采购付款管理</h2>

<p>
    @Html.ActionLink("添加采购付款", "Create")
</p>
<table class="table">
    <tr>
        <th>序号</th>
        <th>
            付款编号
        </th>
        <th>
            付款日期
        </th>
        <th>
            操作员
        </th>
        <th>
            入库编号
        </th>
        <th>
            入库日期
        </th>
        <th>
            付款金额
        </th>
        <th>
            账户类别
        </th>
        <th>
            付款人
        </th>
        <th>
            备注
        </th>
        <th>
            审核状态
        </th>
        <th>
            供应商
        </th>
        <th>操作</th>
    </tr>
   @{ int xh = 1;}
@foreach (var item in Model) {
    <tr>
        <td>@(xh++)</td>
        <td>
            @Html.DisplayFor(modelItem => item.PUPayCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PUPayDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OperatorCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PUInCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PUInDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PUMoney)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsFlag)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BSSupplier.SupplierName)
        </td>
        <td>
            @Html.ActionLink("修改", "Edit", new {id = item.PUPayCode}) |
            @Html.ActionLink("详情", "Details", new {id = item.PUPayCode}) |
            @Html.ActionLink("删除", "Delete", new {id = item.PUPayCode})
        </td>
    </tr>
}

</table>
